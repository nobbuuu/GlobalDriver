<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:background="@drawable/shape_orderitem_bg"
        android:layout_height="100dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/qiangdan_lay"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/qidian_iv"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/xiandan_bulepositioning"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/order_qidian"
                    android:layout_width="wrap_content"
                    android:text="南山大厦 北海大道102号"
                    android:layout_toRightOf="@+id/qidian_iv"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/zhongdian_iv"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/xiandan_redpositioning"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/order_zhongdian"
                    android:layout_width="wrap_content"
                    android:text="南山大厦 北海大道102号"
                    android:layout_toRightOf="@+id/zhongdian_iv"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/creditvalue_lay"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/xiandan_jvli"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/order_distance"
                    android:layout_width="wrap_content"
                    android:text="距您1.5km"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/distanceColor"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="信用值："
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/star_lay"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </LinearLayout>
              <!--  <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/xiadan_start"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/xiadan_start"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/xiadan_start"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/xiadan_start"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/xiadan_halfstart"
                    android:layout_height="wrap_content" />-->
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/qiangdan_lay"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:background="@mipmap/xiadan_qiangdan"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:text="60秒"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/order_qiangdan"
                android:layout_width="wrap_content"
                android:text="@string/tv_rob"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
