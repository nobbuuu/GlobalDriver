<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/back_relay"
            android:layout_width="@dimen/backimg_parent_width"
            android:layout_height="@dimen/backimg_parent_height">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/gerenxinxi_xiangzuo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/backimg_marginleft"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="加盟Global Take司机"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@color/color333"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/morenF9"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="成为Global Take司机，开启惊喜旅程"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="wrap_content"
            android:src="@mipmap/zhaohuimima_iphone"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/changpwd_phoneedt"
            android:layout_width="wrap_content"
            android:hint="请输入手机号"
            android:background="@null"
            android:inputType="phone"
            android:layout_toRightOf="@+id/img_phone"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/changpwd_yanzm"
            android:layout_width="wrap_content"
            android:text="获取验证码"
            android:layout_gravity="end"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="10dp"
            android:background="@mipmap/wangjimima_buleicon"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/fengexian"
        android:layout_height="1dp"></View>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/img_pwdimg"
            android:layout_width="wrap_content"
            android:src="@mipmap/zhaohuimima_yanzhengma"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/changpwd_pwdedt"
            android:layout_width="wrap_content"
            android:hint="请输入验证码"
            android:background="@null"
            android:layout_toRightOf="@+id/img_pwdimg"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <Button
        android:id="@+id/queren_btn"
        android:layout_width="match_parent"
        android:text="我要成为Global Take车主"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/selector_changpwd_btn"
        android:layout_height="wrap_content" />
</LinearLayout>
