<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="66dp">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/msg_icon"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/msg_title"
                    android:layout_width="wrap_content"
                    android:text="系统消息"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/msg_time"
                    android:layout_width="wrap_content"
                    android:text="2017-10-20"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/msg_title"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/msg_close"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/dengdaiyingda_tanchaung_delete"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:id="@+id/msg_content"
                android:layout_width="match_parent"
                android:text="都是反对反对高浮雕广泛大使馆反对"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/color333"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/fengexian"
        android:layout_height="1dp"></RelativeLayout>


</LinearLayout>
